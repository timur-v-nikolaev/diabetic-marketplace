# Staging Environment
NODE_ENV=staging
PORT=5000

# MongoDB (staging cluster)
MONGODB_URI=mongodb+srv://admin:STAGING_PASSWORD@staging-cluster.mongodb.net/diabetic-marketplace?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=staging-jwt-secret-must-be-different-from-prod
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://staging.yourdomain.com

# Sentry
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=5
