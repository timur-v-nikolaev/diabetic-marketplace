# Production Environment - EXAMPLE ONLY
# Copy this file to .env.production and fill in real values

NODE_ENV=production
PORT=5000

# MongoDB (production cluster - use strong password!)
MONGODB_URI=mongodb+srv://admin:STRONG_PRODUCTION_PASSWORD@prod-cluster.mongodb.net/diabetic-marketplace?retryWrites=true&w=majority

# JWT Configuration (use openssl rand -base64 48 to generate)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_48_CHARS
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://yourdomain.com

# Sentry Error Tracking
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# Rate Limiting (stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Logging (only info and above in production)
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Optional: Redis for caching (recommended for production)
# REDIS_URL=redis://localhost:6379
